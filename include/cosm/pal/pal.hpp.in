#ifndef INCLUDE_COSM_PAL_PAL_HPP_
#define INCLUDE_COSM_PAL_PAL_HPP_

/*******************************************************************************
 * Includes
 ******************************************************************************/
#include <string>

#include "cosm/cosm.hpp"

/*******************************************************************************
 * Macros
 ******************************************************************************/

/**
 * \brief The configuration definition to compile for the ARGoS simulator.
 */
#define COSM_PAL_TARGET_ARGOS 1

#if (COSM_PAL_TARGET == COSM_PAL_TARGET_ARGOS)
#define COSM_PAL_ARGOS_ROBOT_TYPE "@COSM_ARGOS_ROBOT_TYPE@"
#define COSM_PAL_ARGOS_ROBOT_NAME_PREFIX "@COSM_ARGOS_ROBOT_NAME_PREFIX@"
#define COSM_PAL_ARGOS_CONTROLLER_XML_ID "@COSM_ARGOS_CONTROLLER_XML_ID@"
#endif /* COSM_PAL_TARGET */

/*******************************************************************************
 * Namespaces/Decls
 ******************************************************************************/
NS_START(cosm, pal);

#if (COSM_PAL_TARGET == COSM_PAL_TARGET_ARGOS)

/**
 * \brief The name of the type robots within the swarm from the POV of ARGoS.
 */
inline static const std::string kARGoSRobotType = COSM_PAL_ARGOS_ROBOT_TYPE;

/**
 * \brief The prefix that all robot unique IDs have within ARGoS.
 */
inline static const std::string kARGoSRobotNamePrefix = COSM_PAL_ARGOS_ROBOT_NAME_PREFIX;

/**
 * \brief The unique name attached to the controller of the desired type in the
 * XML input file.
 */
inline static const std::string kARGoSControllerXMLId = COSM_PAL_ARGOS_CONTROLLER_XML_ID;

#undef COSM_PAL_ARGOS_ROBOT_TYPE
#undef COSM_PAL_ARGOS_ROBOT_NAME_PREFIX
#undef COSM_PAL_ARGOS_CONTROLLER_XML_ID

#endif /* COSM_PAL_TARGET */

NS_END(pal, cosm)

#endif /* INCLUDE_COSM_CONFIG_HPP_ */
